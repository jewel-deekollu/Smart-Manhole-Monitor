<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar for Header (Manhole Monitoring Status) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#3F51B5"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manhole Monitoring Status"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </LinearLayout>

    <!-- Humidity TextView -->
    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: --"
        android:textSize="18sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Temperature TextView -->
    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: --"
        android:textSize="18sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:layout_below="@id/humidityTextView"
        android:layout_marginTop="6dp"
        android:layout_alignParentStart="true" />

    <!-- IR Status TextView -->
    <TextView
        android:id="@+id/irStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR Status: --"
        android:textSize="18sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:layout_below="@id/temperatureTextView"
        android:layout_marginTop="6dp"
        android:layout_alignParentStart="true" />

    <!-- Tilt Status TextView -->
    <TextView
        android:id="@+id/tiltStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilt Status: --"
        android:textSize="18sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:layout_below="@id/irStatusTextView"
        android:layout_marginTop="6dp"
        android:layout_alignParentStart="true" />

    <!-- Water Level TextView -->
    <TextView
        android:id="@+id/waterLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Level: --"
        android:textSize="18sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:layout_below="@id/tiltStatusTextView"
        android:layout_marginTop="6dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
